{% extends 'base.twig' %}

{% block content %}
    {{post.content}}
    {% block products %}
        <div id="shopPageProductListWidget" data-category="{{ title }}">
            {% include ['partials/productListWidget.twig'] %}
        </div>
    {% endblock %}

    <div id="basketButton" class="flexCenterCenter">
        <img src="{{ fn('getImgDir') }}/basket.png" alt="Basket icon">
        <div id="basketButtonSummary" class="flexCenterCenter">{{ fn('getCartProductsQuantity') }}</div>
    </div>
{% endblock %}