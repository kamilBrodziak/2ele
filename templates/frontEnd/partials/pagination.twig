{% if pagination.pages is not empty %}
    <nav class="pagination flexCenterCenter">
        <ul class="paginationList listStyleNone">
            {% if currentPage > 1 %}
                <li>
                    <a href="{{ pagination.prev.link }}" data-page="{{ currentPage - 1 }}"
                       class="paginationElement paginationLink prev transitionEase fontBold flexCenterCenter colorSilver"><</a>
                </li>
            {% endif %}
            {% set isNext = false %}
            {% for page in pagination.pages %}
                {% if page.link %}
                    <li>
                        <a href="{{ page.link }}" data-page="{{ page.title }}"
                           class="paginationElement paginationLink transitionEase paginationLinkNum colorSilver {% if isNext %}next{% else %}prev{% endif %} flexCenterCenter">
                            {{ page.title }}</a>
                    </li>
                {% elseif page.title|number_format == currentPage %}
                    {% set isNext = true %}
                    <li>
                        <span class="paginationElement current fontBold flexCenterCenter colorSilver">{{ page.title }}</span>
                    </li>
                {% else %}
                {% endif %}
            {% endfor %}
{#            <li class="paginationPageInput gradientButton">#}
{#                <span class="flexCenterCenter">Strona </span>#}
{#                <input type="number" value="{{ currentPage }}" min="1" max="{{ pagination.pages|last.title }}"#}
{#                       class="paginationInput textAlignCenter">#}
{#                <span class="flexCenterCenter">z </span>#}
{#                <span class="flexCenterCenter">{{ pagination.pages|last.title }}</span>#}
{#            </li>#}
            {% if currentPage < pagination.pages|last.title|number_format %}
                <li>
                    <a href="{{ pagination.next.link }}" data-page="{{ currentPage + 1 }}"
                       class="paginationElement paginationLink next fontBold transitionEase colorSilver flexCenterCenter">></a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endif %}